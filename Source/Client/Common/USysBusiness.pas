    if sFlag_Yes = FieldByName('Z_InValid').AsString then
    begin
      nStr    := '订单[%s]已无效！';
      nCardNO := Format(nStr, [nCardNO]);
      Exit;
    end;
  end;

  Result    := True;
end;

