    begin
      nStr    := '订单[%s]无效，请重新刷卡';
      nCardNO := Format(nStr, [nCardNO]);
      Exit;
    end;

    if sFlag_Yes = FieldByName('Z_Freeze').AsString then
    begin
      nStr    := '订单[%s]已冻结！';
      nCardNO := Format(nStr, [nCardNO]);
      Exit;
